<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    class="sapUiBodyBackground sapContrastPlus sapContrast"
>
    <Popover
        id="idnotification_idg"
        class="customPopoverContent"
        placement="PreferredLeftOrFlip"
    >
        <customHeader>
            <Bar class="notify">
                <contentLeft>
                    <Text
                        id="idnotification_idh"
                        text="Notifications..!"
                    />
                </contentLeft>
            </Bar>
        </customHeader>

        <NotificationList
            id="idnotification_ido"
            class="notify"
            items="{NotificationModel>/Notifications}"
        >
            <layoutData>
                <FlexItemData
                    id="idnotification_idf"
                    maxWidth="800px"
                    maxHeight="100px"
                />
            </layoutData>
            <NotificationListGroup
                id="idnotification_idd"
                title="Booking request"
                showCloseButton="false"
                close="onItemClose"
                items="{NotificationModel>/Notifications}"
                press="onListItemPress"
            >
                <NotificationListItem
                    id="idnotification_ide"
                    title="{NotificationModel>title}"
                    description="{NotificationModel>description}"
                    datetime="{NotificationModel>datetime}"
                    unread="{NotificationModel>unread}"
                    priority="{NotificationModel>priority}"
                    close="onItemClose1"
                    press="onListItemPress"
                    authorInitials=""
                    authorAvatarColor="Random"
                    class="notify"
                />
            </NotificationListGroup>
        </NotificationList>
    </Popover>
</core:FragmentDefinition>